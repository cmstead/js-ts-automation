{
	"name": "js-ts-automation",
	"displayName": "JS/TS Automation",
	"description": "A junk drawer of JavaScript and TypeScript automation tools",
	"publisher": "cmstead",
	"repository": {
		"type": "git",
		"url": "https://github.com/cmstead/js-ts-automation.git"
	},
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "typescript",
				"path": "./snippets/angular.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/angular-test.json"
			},
			{
				"language": "javascript,typescript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "json",
				"path": "./snippets/snippet.json"
			},
			{
				"language": "typescript,javascript",
				"path": "./snippets/test.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/typescript.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"build": "vsce package",
		"build-patch": "npm version patch && npm run build",
		"build-minor": "npm version minor && npm run build"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vsce": "^1.96.1",
		"vscode-test": "^1.4.1"
	}
}
